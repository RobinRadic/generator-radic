{
    "source": {
        "include": ["lib"],
        "includePattern": ".+\\.js(doc)?$"

    },
    "opts": {
        "recurse": true,
        "destination": "docs"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
            "outputSourceFiles": true
        },
        "systemName"      : "Radic",
        "footer"          : "",
        "copyright"       : "Radic Copyright Â© 2012-2015 Robin Radic.",
        "frontMatterPath": "docs/.front-matter.yml",
        "baseurl" : "/generator-radic"
    },
    "markdown": {
        "parser": "marked"
    }
}
