include ../../../index
// Stack the columns on mobile by making one full-width and the other half-width
+row
    +col()(xs-12, md-8)
        | .col-xs-12 .col-md-8
    +col()(xs-6, md-4)
        | .col-xs-6 .col-md-4

// Columns start at 50% wide on mobile and bump up to 33.3% wide on desktop
+row
    +col()(xs-6, md-4)
        | .col-xs-6 .col-md-4
    +col()(xs-6, md-4)
        | .col-xs-6 .col-md-4
    +col()(xs-6, md-4)
        | .col-xs-6 .col-md-4

// Columns are always 50% wide, on mobile and desktop
+row
    +col()(xs-6)
        | .col-xs-6
    +col()(xs-6)
        | .col-xs-6
